<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="363dp"
        android:layout_height="166dp"
        android:layout_gravity="center"
        android:contentDescription="imagem logo"
        android:fadingEdge="none"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="270dp"
        android:layout_height="57dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        tools:text="@string/descricao" />

    <TextView
        android:id="@+id/tvPrecoAlcool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Preco Álcool  ex: 2,90" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietPrecoAlcool"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:hint="Insira o preço"
            android:inputType="numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tvPrecoGasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Preco Gasolina  ex: 3,90" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="82dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietPrecoGasolina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Insira o preço"
            android:inputType="numberDecimal" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:onClick="calcular"
        android:text="Calcular" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="334dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Resultado"
        android:textAllCaps="false"
        android:visibility="visible" />

</LinearLayout>